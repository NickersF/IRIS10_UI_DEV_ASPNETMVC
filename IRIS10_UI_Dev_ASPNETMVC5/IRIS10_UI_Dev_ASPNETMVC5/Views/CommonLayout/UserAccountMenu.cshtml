
@{
    ViewBag.Title = "UserAccountMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid d-flex">
    <div class="row flex-grow-1">
        <div class="col-md d-flex justify-content-center align-items-center">

            <div class="user-menu-template iris-bg-dark-blue iris-border-dark-blue rounded">
                <div class="container-fluid h-100 d-flex flex-column">
                    <div class="row border-bottom iris-border-light-blue pb-2">
                        <div class="col text-light">
                            <h5 class="text-center mt-3 mb-3">Welcome Ken Smith</h5>
                            <i class="fas fa-laptop-house iris-type-light-blue"></i><strong class="ml-3">Tenant: </strong><span class="iris-type-light-blue">AOCCRP</span>
                        </div>
                    </div>
                    <div class="row border-bottom iris-border-light-blue">
                        <div class="col p-0">
                            <button class="btn btn-sm w-100 text-left rounded-0 user-menu-item text-light">Support</button>
                            <button class="btn btn-sm w-100 text-left rounded-0 user-menu-item text-light">Users</button>
                            <button class="btn btn-sm w-100 text-left rounded-0 user-menu-item text-light">Organization</button>
                            <button class="btn btn-sm w-100 text-left rounded-0 user-menu-item text-light">Logout</button>
                        </div>
                    </div>
                    <div class="row border-bottom iris-border-light-blue">
                        <div class="col">
                            <span class="d-inline-block mt-2 mb-2 text-light">Change Tenant:</span>
                            <select id="dropdownlist" class="mb-3 w-100">
                                <option>Item 1</option>
                                <option>Item 2</option>
                                <option>Item 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="row flex-grow-1">
                        <div class="col d-flex justify-content-center align-items-center text-center">
                            <div class="mt-2 mb-2"><a href="#" class="text-white">Legal Info</a><span class="text-light"> | Version: 10.0.0</span></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#dropdownlist").kendoDropDownList();
    });
</script>