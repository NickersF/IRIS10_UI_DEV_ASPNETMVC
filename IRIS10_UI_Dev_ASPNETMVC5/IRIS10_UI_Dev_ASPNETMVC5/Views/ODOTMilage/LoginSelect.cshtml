
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ODOT Mileage Report UI</title>

    @Styles.Render("~/Content/css")

    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/kendo.aspnetmvc.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
</head>
<body class="h-100">

    <main id="loginWrapper" class="d-flex flex-column h-100">

        <header id="loginSelectHeader" class="h-25 flextest-medium-blue">
            <h1 class="display-4">ODOT Mileage Reporting</h1>
        </header>

        <section id="loginSelectWrapper" class="d-flex h-75 flextest-light-blue">

            @* Wrapper which contains two buttons for selecting a login *@
            <section id="loginButtonsWrapper" class="justify-content-around align-items-center w-100 flextest-darker-blue">
                <div id="loginODOT" class="flextest-light-blue height-fit-content p-5">
                    <button id="loginSelectODOT_btn" type="button" class="k-button">ODOT Login</button>
                </div>
                <div id="loginCounties" class="flextest-light-blue height-fit-content p-5">
                    <button id="loginSelectCounties_btn" type="button" class="k-button">County Login</button>
                </div>
            </section>

            @* Wrapper for ODOT login *@
            <section id="loginFormODOTWrapper" class="justify-content-around align-items-center w-100 flextest-darker-blue">
                <div>ODOT Login Form Here</div>
            </section>

            @* Wrapper for counties login *@
            <section id="loginFormCountiesWrapper" class="justify-content-around align-items-center w-100 flextest-darker-blue">
                <div>Counties Login Form Here</div>
            </section>

        </section>

    </main>
    
    <script src="~/Scripts/custom/ODOT_UI.js"></script>
</body>
</html>
