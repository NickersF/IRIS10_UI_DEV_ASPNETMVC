
@{
    Layout = null;
}

<!DOCTYPE html>

<html class="h-100">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ODOT Mileage Report UI</title>

    @Styles.Render("~/Content/css")

    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/jszip.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.3.1118/js/kendo.aspnetmvc.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
</head>
<body class="h-100">
    
    <main id="mileageMainWrapper" class="d-flex flex-column h-100">

        <header class="odot-header-bg text-light">
            <div class="row no-gutters">
                <div class="col p-3">
                    <h5>ODOT Mileage Report System</h5>
                    @*<img src="~/Images/ODOT_UI_Illustration.svg" class="odot-logo-height" />*@
                </div>
                <div class="col-2">
                    user area
                </div>
            </div>
        </header>

        <section id="countyMapContainer" class="container-fluid h-100">
            <div class="row odot-login-grad-bg h-100 pt-3 pb-3">
                <div class="col d-flex">
                    <div class="card flex-fill">
                        <div class="card-header">
                            <h5>Oregon County Map</h5>
                            <div class="card">
                                <div class="card-body bg-white">
                                    <h5 id="countyNameLabel" class="m-0">No County Selected</h5>
                                </div>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <object id="svgObject" type="image/svg+xml" class="w-50" data="~/Images/Oregon_County_Map_Optimized.svg"></object>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>

    <script src="~/Scripts/custom/ODOT_UI_InteractiveMap.js"></script>
</body>
</html>
