
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    @* Text editor instance *@
                    <textarea id="editor" rows="10" cols="30"></textarea>

                    <script>
                        $(document).ready(function () {
                            $("#editor").kendoEditor();
                        });
                    </script>

                </div>
            </div>
        </div>
    </div>
</div>
